<div class="container-fluid">
  <%= render 'share/navpro' %>

<strong>Listado de categoria</strong>
<br>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Imagen</th>
    <th>Codigo</th>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<% @categories.each do |category| %>
<tbody>
  <tr>
    <td>
       <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 84px; height: 84px;" src="<%= category.imagen %>">
     </td>
    <td><%= category.codigo %></td>
    <td><%= category.nombre %></td>
    <td><%= category.descripcion %></td>
    <td><%= link_to "<div class='btn btn-mini'><i class='icon-eye-open'></i> Ver</div>".html_safe, category %></td>
    <td><%= link_to "<div class='btn btn-mini'><i class='icon-pencil'></i> Editar</div>".html_safe, edit_category_path(category) %></td>
    <td><%= link_to "<div class='btn btn-mini'><i class='icon-remove-circle'></i> Eliminar</div>".html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  </tbody>
<% end %>
</table>
</div>
<br/>
