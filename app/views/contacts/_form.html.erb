<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :email %>
    <%= f.input :direccion %>
    <%= f.input :ciudad %>
    <%= f.input :telefono %>
    <%= f.input :comentario %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
