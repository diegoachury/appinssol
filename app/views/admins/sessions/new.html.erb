<style>

      body {
        padding-top: 70px;
        padding-bottom: 40px;
        background-color: #005bc4;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    


</style>

<div class="container">



<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html:{class: "form-signin"}) do |f| %>
<h2 class="form-signin-heading">Lubu</h2>

    <%= f.input :email, label: false, :required => false, :autofocus => true, placeholder: 'Usuario' %>
    <%= f.input :password, label: false, :required => false, placeholder: 'ContraseÃ±a' %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>



    <%= f.button :submit, "Iniciar", :class => 'btn btn-success' %>
    <br>
    <%= render "devise/shared/links" %>
<% end %>


</div>