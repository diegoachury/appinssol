<div class="container">
  <h1>Listado de Clientes</h1>

<table class="table table-bordered">
  <tr>
    <th>Nombre del Cliente</th>
    <th>Url photo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.name %></td>
    <td><img src="<%= customer.url_photo %>" style="width: 100px;
height: 64px;"></td>
    <td><%= link_to 'Ver', customer %></td>
    <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
    <td><%= link_to "Eliminar", customer, :data => { :confirm => "Are you sure?" }, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Cliente', new_customer_path %>


</div>
